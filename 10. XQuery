</ksiazka>

16.

let $book := doc("../Downloads/xquery/bib/bib.xml")//book
return
<przedzial>
{min($book/@year)} - {max($book/@year)}
</przedzial>

17.

let $book := doc("../Downloads/xquery/bib/bib.xml")//book
return
<roznica>
{max($book/price) - min($book/price)}
</roznica>

18.

<najtansze>
{
  let $books := doc("../Downloads/xquery/bib/bib.xml")//book
  let $minprice := min($books/price)
  for $book in doc("../Downloads/xquery/bib/bib.xml")//book where $book/price = $minprice
  return 
  <najtansza>
  {$book/title}
  {for $author in $book/author return $author}
  </najtansza>
}
</najtansze>

19.

let $authors := distinct-values(doc("../Downloads/xquery/bib/bib.xml")//author/last)
for $author in $authors
return 
<autor>
<last>	{$author}</last>
{for $book in doc("../Downloads/xquery/bib/bib.xml")//book where $book/author/last = $author return $book/title}
</autor>

20.

<wynik>
{
    for $play in collection("../Downloads/xquery/shakespeare")//PLAY
    return $play/TITLE
}
</wynik>

21.

for $play in collection("../Downloads/xquery/shakespeare")//PLAY where some $line in $play//LINE satisfies contains($line, "or not to be")
return $play/TITLE

22.

<wynik>
{
    for $play in collection("../Downloads/xquery/shakespeare")//PLAY
    return 
    <sztuka tytul='{$play/TITLE}'>
    <postaci>{count($play//PERSONAE//PERSONA)}</postaci>
    <aktow>{count($play//ACT)}</aktow>
    <scen>{count($play//SCENE)}</scen>
    </sztuka>
}
</wynik>